include mixins
extends layout
block content   

            include navbar

           
            div
                form.form-horizontal(method='post')
                    fieldset
                        legend Add user
                        .form-group
                            label.col-lg-2.control-label(for='inputEmail') User name
                            .col-lg-10
                                input#inputEmail.form-control(type='text', placeholder='', name='userName', required='')
                        .form-group
                            label.col-lg-2.control-label(for='inputPassword') Password
                            .col-lg-10
                                input#inputPassword.form-control(type='password',name='password', required='')  
                            label.col-lg-2.control-label(for='inputPassword') Last name
                            .col-lg-10
                                input#inputPassword.form-control(type='text', name='lastName', required='')
                            label.col-lg-2.control-label(for='inputPassword') First name
                            .col-lg-10
                                input#inputPassword.form-control(type='text', placeholder='', name='firstName')
                            label.col-lg-2.control-label(for='inputPassword') Employee ID
                            .col-lg-10
                                input#inputPassword.form-control(type='text', placeholder='', name='empID')
                            label.col-lg-2.control-label(for='inputPassword') Email
                            .col-lg-10
                                input#inputPassword.form-control(type='text', placeholder='', name='userEmail')
                        .form-group
                          label.col-lg-2.control-label(for='select') Privilege
                          .col-lg-10
                            select#selecttime.form-control(name='privLevel')
                              option User
                              option Administrator
                              option Event Control
                              option Other
                              
                                
                        .form-group
                          label.col-lg-2.control-label(for='select') Status
                          .col-lg-10
                            select.form-control(multiple='', name='status')
                              option Active
                              option Suspended
                              option Inactive
                              
                        .form-group
                          .col-lg-10.col-lg-offset-2                         
                            button.btn.btn-primary.btn-lg(type='submit') Submit
                       
                        link(rel='stylesheet', href='/javascripts/jquery-ui.css')         
                        link(rel='stylesheet', href='/javascripts/jquery.timepicker.css')
                        
                        