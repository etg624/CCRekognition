include mixins
extends layout
block content   

            include navbar

            h3 Muster points
            br

            div
                table#pickle.table.table-hover.table-striped.table-bordered
                    thead
                        tr.primary 
                            th
                            th Point ID
                            th GPS lat
                            th GPS lng
                            th Description
                            th Region
                            th Campus
                            th Building
                            th Location
                            th Warden
                            th Device
                    tbody
                        -each result in results
                            tr
                                    td
                                        a(href="/musterPointModify/#{result.PointID}")  Edit |
                                        a(href="/musterPointDelete/#{result.PointID}")  Delete
                                       
                                    td=result.PointID
                                    td=result.lat
                                    td=result.lng
                                    td=result.Description
                                    td=result.Region
                                    td=result.Campus
                                    td=result.Building
                                    td=result.Location
                                    td=result.Warden
                                    td=result.DeviceAuthCode

                script.
                    $(document).ready(function() {
                    $('#pickle').DataTable();
                    });
                script.
                    $(document).ready(function() {
                    $('#pickle tr').click(function() {
                    var href = $(this).find("a").attr("href");
                        if(href) {
                            window.location = href;
                        }
                    });
                    });
           div 
                br
                a.btn.btn-primary.btn-lg(href='musterPointAdd', role='button') Click to Add an Event