include mixins
extends layout
block content   

            include navbar
            

           
            div
                form.form-horizontal(method='post')
                    fieldset
                        legend Attendance Report Field Selection
                        .form-group
                            label.col-md-2.control-label(for='inputEmail') Report Prefix
                            .col-lg-10
                                input#inputEmail.form-control(type='text', placeholder='', name='reportPrefix', value=reportPrefix, required='')
                        
                        .form-group
                            label.col-lg-2.control-label(for='select') Field Selection
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input(type='checkbox', name='firstName', checked=firstName == 'YES', value='YES')
                                    |           First Name
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input2(type='checkbox', name='lastName', checked=lastName == 'YES', value='YES')
                                    |           Last Name
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input(type='checkbox', name='inTIme', checked=inTIme == 'YES', value='YES')
                                    |           In Time
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input2(type='checkbox', name='outTIme', checked=outTIme == 'YES', value='YES')
                                    |           Out Time
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input(type='checkbox', name='iClassNumber', checked=iClassNumber == 'YES', value='YES')
                                    |           Badge Number
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input2(type='checkbox', name='attendDate', checked=attendDate == 'YES', value='YES')
                                    |           Attendance Date
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input2(type='checkbox', name='inSeconds', checked=inSeconds == 'YES', value='YES')
                                    |           In Seconds
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input(type='checkbox', name='outSeconds', checked=outSeconds == 'YES', value='YES')
                                    |           Out Seconds
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input2(type='checkbox', name='empID', checked=empID == 'YES', value='YES')
                                    |           Employee ID
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input2(type='checkbox', name='checkInType', checked=checkInType == 'YES', value='YES')
                                    |           Check In Type
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input(type='checkbox', name='mobSSOperator', checked=mobSSOperator == 'YES', value='YES')
                                    |           MOBSS Operator
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input(type='checkbox', name='deviceAuthCode', checked=deviceAuthCode == 'YES', value='YES')
                                    |           Device ID
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input(type='checkbox', name='eventID', checked=eventID == 'YES', value='YES')
                                    |           Event ID
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input(type='checkbox', name='email', checked=email == 'YES', value='YES')
                                    |           Email
                            .form-check
                                label.col-lg-2.control-label 
                                .col-lg-10
                                    label.form-check-label
                                    input.form-check-input(type='checkbox', name='identifier', checked=identifier == 'YES', value='YES')
                                    |           Additional Identifier
                        .form-group
                                .col-lg-10.col-lg-offset-2
                                    //-feb--dont need cancel button as could just use browser back button
                                    //-button.btn.btn-default(type='reset') Cancel
                                    
                                    button.btn.btn-primary.btn-lg(type='submit') Save this format      
                        
                        br
                        include footer
                       
                        link(rel='stylesheet', href='/javascripts/jquery-ui.css')         
                        link(rel='stylesheet', href='/javascripts/jquery.timepicker.css')
                        
                        script(src='/javascripts/jquery.timepicker.min.js')
                        script.
                          $( function() {
                          $( "#timepicker" ).timepicker({timeFormat : "H:i:s"});
                          } );

                        script(src='/javascripts/jquery-ui.js')
                        script.
                          $( function() {
                          $( "#datepicker" ).datepicker({dateFormat: "yy-mm-dd"});
                          } );


