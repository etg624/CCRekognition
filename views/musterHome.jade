include mixins
extends layout
block content   

            include navbar

            h3 Muster master list
            br
            div
                table#pickle.table.table-hover.table-striped.table-bordered
                    thead
                        tr  
                            th
                            th Muster ID
                            th Muster Name
                            th Date/Time
                            th Location
                            th Muster Captain
                    tbody
                        -each result in results
                            tr
                                    td
                                        a(href="/musterLive/#{result.EventID}") Live |
                                        br
                                        a(href="/musterDetail/#{result.EventID}") Detail |
                                        br
                                        a(href="/musterModify/#{result.EventID}") Edit
                                    td=result.EventID
                                    td=result.EventName
                                    td=result.EventDateTime
                                    td=result.EventLocationName
                                    td=result.EventSponsorName
                                    
                script.
                    $(document).ready(function() {
                    $('#pickle').DataTable();
                    });
                script.
                    $(document).ready(function() {
                    $('#pickle tr').click(function() {
                    var href = $(this).find("a").attr("href");
                        if(href) {
                            window.location = href;
                        }
                    });
                    });

             div 
                br
                a.btn.btn-primary.btn-lg(href='musterAdd', role='button') Add Muster Event
           